generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Review {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  user               String? @db.ObjectId
  product            String? @db.ObjectId
  rating             Int
  title              String
  comment            String
  isVerifiedPurchase Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  slug         String  @unique
  category     String
  subcategory  String?
  minicategory String?

  images    String[]
  brand     String?
  videoLink String?

  description  String?
  price        Float
  listPrice    Float
  countInStock Int
  tags         String[] @default(["new arrival"])
  colors       String[] @default(["White", "Red", "Black"])
  sizes        String[] @default(["S", "M", "L"])

  avgRating   Float   @default(0)
  numReviews  Int     @default(0)
  numSales    Int     @default(0)
  isPublished Boolean @default(false)

  // Embedded type: RatingDistribution
  ratingDistribution RatingDistribution[]

  // Reference IDs (not relations in MongoDB)
  reviews String[] @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type RatingDistribution {
  rating Int
  count  Int
}
